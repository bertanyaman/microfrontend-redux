{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "jsx": "react",
    "lib": [ "dom", "es6", "dom.iterable", "scripthost", "es2015.iterable", "es2015.collection" ],
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "react": [ "node_modules/@types/react" ]
    },
    "esModuleInterop": true,
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "lib",
    "dist"    
  ]
}